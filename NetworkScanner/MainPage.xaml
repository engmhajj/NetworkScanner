<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetworkScanner.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Margin="0,20"
            Spacing="25">
            <Entry
                x:Name="TextBox1"
                MaxLength="50"
                WidthRequest="700"
                HeightRequest="500"
                BackgroundColor="White"
                IsReadOnly="True"/>
            <Button
                x:Name="ScanBtn"
                Text="Scan" 
                WidthRequest="100"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="ScanBtn_OnClicked"
                HorizontalOptions="Center" />
            <Button
                x:Name="ExitBtn"
                Text="Exit" 
                WidthRequest="100"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="ExitBtn_OnClicked"
                HorizontalOptions="End" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
